# Environment variables for docker-compose
# Copy this file to .env and fill in your actual values

# Azure OpenAI Chat Configuration (AI Foundry format)
AZURE_OPENAI_ENDPOINT=https://dehub.services.ai.azure.com
AZURE_OPENAI_API_KEY=your-azure-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=your-deepseek-deployment-name
AZURE_OPENAI_API_VERSION=2024-05-01-preview

# Azure OpenAI Embeddings Configuration (Cognitive Services format)
AZURE_OPENAI_EMBEDDING_ENDPOINT=https://dehub.cognitiveservices.azure.com
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
AZURE_OPENAI_EMBEDDING_API_VERSION=2023-05-15

# Azure FLUX Image Generation (uses same credentials as Azure OpenAI Chat)
AZURE_FLUX_DEPLOYMENT_NAME=FLUX-1.1-pro
AZURE_FLUX_API_VERSION=2025-04-01-preview

# Azure Speech Services (Optional, for STT/TTS)
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastus
AZURE_SPEECH_STT_ENDPOINT=https://eastus.stt.speech.microsoft.com
AZURE_SPEECH_TTS_ENDPOINT=https://eastus.tts.speech.microsoft.com

# Memori Memory Engine (for persistent conversation memory)
MEMORI_DATABASE_URL=sqlite:///./storage/memori.db
MEMORI_ENABLED=true
MEMORI_CONSCIOUS_INGEST=true
MEMORI_AUTO_INGEST=true
# Optional: Multi-tenant namespace
# MEMORI_NAMESPACE=production

# TTS Configuration
TTS_ENABLED_BY_DEFAULT=false
TTS_VOICE=en-US-JennyNeural
TTS_LANGUAGE=en-US
